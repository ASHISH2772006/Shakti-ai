<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NYAYA - Your Legal Rights"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interactive FIR Generator â€¢ Rights Library â€¢ Free Lawyer Connection â€¢ Blockchain Evidence"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <!-- Tabs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tab_fir_generator"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FIR Generator"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:padding="12dp"
                    android:background="@color/primary_light"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tab_know_rights"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Know Your Rights"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:padding="12dp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tab_free_lawyers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Free Lawyers"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:padding="12dp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tab_legal_education"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Legal Education"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:padding="12dp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <!-- Interactive FIR Generator Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ Interactive FIR Generator"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Generate a pre-filled, court-admissible FIR in proper legal format. No legal knowledge required."
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="16dp" />

                    <!-- Type of Incident -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type of Incident *"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/incident_type_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:padding="12dp"
                        android:background="@android:drawable/edit_text" />

                    <!-- Name Fields -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Your Full Name *"
                                android:textSize="12sp"
                                android:textColor="@color/text_primary"
                                android:layout_marginBottom="4dp" />

                            <EditText
                                android:id="@+id/full_name_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter your full name"
                                android:padding="12dp"
                                android:background="@android:drawable/edit_text" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Father's/Husband's Name *"
                                android:textSize="12sp"
                                android:textColor="@color/text_primary"
                                android:layout_marginBottom="4dp" />

                            <EditText
                                android:id="@+id/guardian_name_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter name"
                                android:padding="12dp"
                                android:background="@android:drawable/edit_text" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Age Field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age *"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/age_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter your age"
                        android:inputType="number"
                        android:padding="12dp"
                        android:background="@android:drawable/edit_text"
                        android:layout_marginBottom="16dp" />

                    <!-- Address Field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address *"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/address_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter your complete address"
                        android:padding="12dp"
                        android:minLines="2"
                        android:background="@android:drawable/edit_text"
                        android:layout_marginBottom="16dp" />

                    <!-- Mobile and Date Fields -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mobile Number *"
                                android:textSize="12sp"
                                android:textColor="@color/text_primary"
                                android:layout_marginBottom="4dp" />

                            <EditText
                                android:id="@+id/mobile_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter mobile"
                                android:inputType="phone"
                                android:padding="12dp"
                                android:background="@android:drawable/edit_text" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date of Incident *"
                                android:textSize="12sp"
                                android:textColor="@color/text_primary"
                                android:layout_marginBottom="4dp" />

                            <EditText
                                android:id="@+id/date_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="dd-mm-yyyy"
                                android:padding="12dp"
                                android:background="@android:drawable/edit_text" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Time and Location Fields -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Time of Incident *"
                                android:textSize="12sp"
                                android:textColor="@color/text_primary"
                                android:layout_marginBottom="4dp" />

                            <EditText
                                android:id="@+id/time_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="--:--"
                                android:padding="12dp"
                                android:background="@android:drawable/edit_text" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Location of Incident *"
                                android:textSize="12sp"
                                android:textColor="@color/text_primary"
                                android:layout_marginBottom="4dp" />

                            <EditText
                                android:id="@+id/location_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter location"
                                android:padding="12dp"
                                android:background="@android:drawable/edit_text" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Detailed Description -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detailed Description of Incident *"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/description_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Describe what happened in detail. Include: What occurred? Who was involved? Were there any witnesses? What did the accused person do/say?"
                        android:padding="12dp"
                        android:minLines="4"
                        android:gravity="top"
                        android:background="@android:drawable/edit_text"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Be as specific as possible. This will be used in the legal FIR document."
                        android:textSize="10sp"
                        android:textColor="@color/error"
                        android:layout_marginBottom="16dp" />

                    <!-- Details of Accused -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Details of Accused (if known)"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/accused_details_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Physical description (age, height, clothes), name (if known), vehicle details, identifying marks, etc."
                        android:padding="12dp"
                        android:minLines="3"
                        android:gravity="top"
                        android:background="@android:drawable/edit_text"
                        android:layout_marginBottom="16dp" />

                    <!-- Evidence Available -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Evidence Available"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <CheckBox
                        android:id="@+id/evidence_photos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Photos/Videos"
                        android:layout_marginBottom="4dp" />

                    <CheckBox
                        android:id="@+id/evidence_audio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Audio Recordings"
                        android:layout_marginBottom="4dp" />

                    <CheckBox
                        android:id="@+id/evidence_screenshots"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Screenshots"
                        android:layout_marginBottom="4dp" />

                    <CheckBox
                        android:id="@+id/evidence_witness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Witness Statements"
                        android:layout_marginBottom="4dp" />

                    <CheckBox
                        android:id="@+id/evidence_medical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medical Reports"
                        android:layout_marginBottom="4dp" />

                    <CheckBox
                        android:id="@+id/evidence_cctv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CCTV Footage"
                        android:layout_marginBottom="16dp" />

                    <!-- Relief Sought -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Relief Sought"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/relief_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Immediate arrest of the accused under applicable sections, Punishment as per law, Protection and security for the complainant."
                        android:padding="12dp"
                        android:minLines="2"
                        android:gravity="top"
                        android:background="@android:drawable/edit_text"
                        android:layout_marginBottom="16dp" />

                    <!-- Action Buttons -->
                    <Button
                        android:id="@+id/btn_generate_fir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“„ Generate FIR Document"
                        android:backgroundTint="@color/nyaya_color"
                        android:textColor="@color/white"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btn_save_draft"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¾ Save as Draft"
                        android:backgroundTint="@color/text_secondary"
                        android:textColor="@color/white" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
