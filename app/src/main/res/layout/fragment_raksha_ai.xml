<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RAKSHA - Escape Support"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hidden App â€¢ Evidence Recording â€¢ Blockchain Proof â€¢ Safe House Network â€¢ Escape Planning"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <!-- Hidden App Mode -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“± Hidden App Mode - Pattern Access"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="App appears as 'Calculator' on home screen. Access with secret pattern: (1â†’3) volume buttons"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/btn_reveal_app"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘ï¸ Reveal App"
                        android:backgroundTint="@color/raksha_color"
                        android:textColor="@color/white"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âš ï¸ Emergency Quick Access\nShake phone 3 times rapidly - App transforms back to calculator if someone approaches"
                        android:textSize="11sp"
                        android:textColor="@color/warning"
                        android:padding="8dp"
                        android:background="#FFF3E0" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Evidence Recording -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“¹ Court-Admissible Evidence Recording"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Automatic recording with blockchain verification â€¢ Cannot be tampered"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/btn_start_audio_recording"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ™ï¸ Start Audio Recording"
                        android:backgroundTint="@color/text_primary"
                        android:textColor="@color/white"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btn_start_video_recording"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“¹ Start Video Recording"
                        android:backgroundTint="@color/text_primary"
                        android:textColor="@color/white"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="What Gets Recorded:"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ… Audio of abuse (conversations, threats)\nâœ… Video evidence\nâœ… Location data (GPS coordinates)\nâœ… Blockchain timestamp (proves when it happened)\nâœ… AES-256 encrypted storage\nâœ… Photos of injuries/damage"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/btn_view_evidence_archive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ View Evidence Archive (3 incidents)"
                        android:backgroundTint="@color/raksha_color"
                        android:textColor="@color/white" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Blockchain Evidence -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Why Blockchain Makes Evidence Court-Admissible"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1ï¸âƒ£ Immutable Timestamp\nBlockchain creates cryptographic proof of WHEN evidence was created. Cannot be edited or backdated."
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2ï¸âƒ£ Tamper-Proof Hash\nEach file gets unique digital fingerprint. Any editing changes the hash, proving tampering."
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3ï¸âƒ£ Legal Recognition\nIndian Evidence Act Section 65B recognizes blockchain evidence as digital signature."
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4ï¸âƒ£ Distributed Storage\nEvidence exists on multiple nodes. Abuser can't destroy all copies even if phone taken."
                        android:textSize="12sp"
                        android:textColor="@color/text_primary" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Support Network -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ  Support Network"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/btn_find_safe_house"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Find Safe House Near Me"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btn_emergency_contacts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Emergency Contacts"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btn_escape_plan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Create Escape Plan"
                        android:backgroundTint="@color/raksha_color"
                        android:textColor="@color/white" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Legal Aid -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âš–ï¸ Legal Aid"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/btn_generate_fir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Generate FIR (Domestic Violence)"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btn_protection_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Apply for Protection Order"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btn_free_lawyer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Connect with Free Lawyer" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
