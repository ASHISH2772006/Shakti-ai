<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SATHI - Your AI Companion"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24/7 Emotional Support â€¢ Sentiment Analysis â€¢ Mental Health Screening â€¢ Crisis Detection"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <!-- Tabs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tab_ai_companion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="AI Companion"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:padding="12dp"
                    android:background="@color/primary_light"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tab_mental_health"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mental Health"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:padding="12dp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tab_support_resources"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Support Resources"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:padding="12dp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="16dp">

                <!-- Chat Section -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’¬ Chat with SATHI"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your safe space to share anything - judgment free zone"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="16dp" />

                        <!-- Chat Message -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:cardBackgroundColor="#F5F5F5"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Namaste! I'm SATHI, your AI companion. I'm here for you 24/7. You can tell me anything - no judgment. How are you feeling today?"
                                    android:textSize="14sp"
                                    android:textColor="@color/text_primary"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4:45:20 pm"
                                    android:textSize="10sp"
                                    android:textColor="@color/text_secondary" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Chat List -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/chat_recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginBottom="12dp" />

                        <!-- Voice Message Button -->
                        <Button
                            android:id="@+id/btn_voice_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸŽ¤ Voice Message"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                        <!-- Upload Media Button -->
                        <Button
                            android:id="@+id/btn_upload_media"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“¤ Upload Media"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Images, videos, or audio (max 10MB)"
                            android:textSize="10sp"
                            android:textColor="@color/text_secondary"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="12dp" />

                        <!-- Message Input -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/message_input"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Type your message... (Hindi/English both work)"
                                android:textSize="14sp"
                                android:padding="12dp"
                                android:background="@android:drawable/edit_text" />

                            <ImageButton
                                android:id="@+id/btn_send_message"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@android:drawable/ic_menu_send"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Send" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Right Side Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:orientation="vertical">

                    <!-- Well-being Score Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Your Well-being Score"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginBottom="12dp" />

                            <!-- Mood Score -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginBottom="8dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="ðŸ’— Mood Score"
                                        android:textSize="12sp"
                                        android:textColor="@color/text_primary" />

                                    <TextView
                                        android:id="@+id/mood_score"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="65%"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/text_primary" />
                                </LinearLayout>

                                <ProgressBar
                                    android:id="@+id/mood_progress"
                                    style="@android:style/Widget.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="8dp"
                                    android:progress="65"
                                    android:progressTint="@color/sathi_color" />
                            </LinearLayout>

                            <!-- Anxiety Level -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginBottom="8dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="âš¡ Anxiety Level"
                                        android:textSize="12sp"
                                        android:textColor="@color/text_primary" />

                                    <TextView
                                        android:id="@+id/anxiety_score"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="35%"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/text_primary" />
                                </LinearLayout>

                                <ProgressBar
                                    android:id="@+id/anxiety_progress"
                                    style="@android:style/Widget.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="8dp"
                                    android:progress="35"
                                    android:progressTint="@color/warning" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Conversations"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/conversation_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Crisis Support Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ†˜ Crisis Support"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginBottom="12dp" />

                            <Button
                                android:id="@+id/btn_emergency_helpline"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“ž Emergency Helpline"
                                android:textSize="14sp"
                                android:backgroundTint="@color/error"
                                android:layout_marginBottom="8dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="4dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Women Helpline"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_primary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1091"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="4dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="NIMHANS"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_primary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="080-4611-0007"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Emergency"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_primary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="112"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Quick Actions Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Quick Actions"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginBottom="12dp" />

                            <Button
                                android:id="@+id/btn_breathing_exercise"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ðŸ« Breathing Exercise"
                                android:textSize="12sp"
                                android:layout_marginBottom="8dp" />

                            <Button
                                android:id="@+id/btn_gratitude_journal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ðŸ’— Gratitude Journal"
                                android:textSize="12sp"
                                android:layout_marginBottom="8dp" />

                            <Button
                                android:id="@+id/btn_support_group"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ðŸ‘¥ Join Support Group"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
